html
  head
    meta(charset='utf-8')
    title hello
    script(src='//cdn.bootcss.com/aframe/0.4.0/aframe.min.js')
    script(src='model/aframe-extras.loaders.min.js')
  body
    #app
    a-scene
      a-assets
        a-asset-item#monu(src='model/monu1.ply')
        img#bg(src='model/bg.jpg')
      a-entity(geometry='primitive: sphere; radius: 100',
               material='shader: flat; src: #bg',
                scale='1 1 -.9')

      a-entity#camera(position='0 0 0', cursor-rotation)
        a-camera(fov='80', far='100')
          a-cursor

      a-entity(ply-model='src: #monu',
               position='0 0 -5',
               rotation='-90 0 0',
               scale='.03 .03 .03')

      a-box(position='0 2 -5', scale='2 2 2', rotation='45 45 0')

